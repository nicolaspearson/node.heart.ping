    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ping",
    "heartbeat",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolaspearson/node.heart.ping"
  },
  "author": "Nicolas Pearson",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.12.24",
    "ts-helpers": "~1.1.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
