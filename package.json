{
  "name": "heart-ping",
  "version": "1.0.12",
  "description": "A simple light-weight Typescript module for pinging HTTP services at set intervals to provide a heartbeat.",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run tslint && rm -rf ./dist && npm run build:ts",
    "build:ts": "tsc --rootDir ./src/",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ncu": "ncu",
    "ncu:u": "ncu -u"
  },
  "keywords": [
    "ping",
    "heartbeat",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolaspearson/node.heart.ping"
  },
  "author": "Nicolas Pearson",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "~13.7.7",
    "npm-check-updates": "~4.0.6",
    "ts-helpers": "~1.1.2",
    "ts-node": "~8.6.2",
    "tslint": "~6.0.0",
    "typescript": "~3.8.3"
  }
}
